datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

generator client {
  provider = "prisma-client-js"
}

model Review {
  id        Int      @id @default(autoincrement())
  name      String
  rating    Int
  comment   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Reservation {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String
  service   String?
  dateTime  DateTime
  createdAt DateTime @default(now())
}

model User {
  id       Int    @id @default(autoincrement())
  fullname String
  email    String @unique
  phone    String
  password String
  role     Role
}

enum Role {
  ADMIN
  CUSTOMER
}
